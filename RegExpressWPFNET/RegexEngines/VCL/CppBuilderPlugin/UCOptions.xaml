<UserControl x:Class="CppBuilderPlugin.UCOptions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CppBuilderPlugin"
             xmlns:ui="clr-namespace:RegExpressLibrary.UI;assembly=RegExpressLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="164.938" d:DesignWidth="591.038" 
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <Style TargetType="ui:CheckboxWithNote">
            <EventSetter Event="Changed" Handler="CheckBox_Changed"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <StackPanel Orientation="Vertical" Margin="0">
            <ui:CheckboxWithNote Prop="roIgnoreCase" Note="case-insensitive matching"/>
            <ui:CheckboxWithNote Prop="roMultiLine" Note="^ and $ match at the beginning and end of any line"/>
            <ui:CheckboxWithNote Prop="roExplicitCapture" Note="capture explicitly name groups of the form (?&lt;name>…)"/>
            <ui:CheckboxWithNote Prop="roCompiled" Note="compile regular expression to an assembly"/>
            <ui:CheckboxWithNote Prop="roSingleLine" Note="dot (.) matches every character (including \n)"/>
            <ui:CheckboxWithNote Prop="roIgnorePatternSpace" Note="eliminates white space from the pattern and enables comments marked with #"/>
            <ui:CheckboxWithNote Prop="roNotEmpty" Note="(not documented)"/>
        </StackPanel>
    </Grid>
</UserControl>
    
